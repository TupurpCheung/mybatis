<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns="http://mybatis.tupurpcheung.cn/mybatis/1.0/config"
           targetNamespace="http://mybatis.tupurpcheung.cn/mybatis/1.0/config"
           elementFormDefault="qualified" attributeFormDefault="unqualified">
    <xs:element name="configuration" type="configurationType"/>
    <xs:complexType name="configurationType">
        <xs:sequence>
            <xs:element name="environments" type="environmentsType"/>
            <xs:element name="mappers" type="mappersType"/>
        </xs:sequence>

    </xs:complexType>

    <xs:complexType name="environmentsType">
        <xs:sequence>
            <xs:element name="environment" type="environmentType" maxOccurs="unbounded"/>
        </xs:sequence>
        <xs:attribute name="default" type="xs:string" use="required"/>

    </xs:complexType>

    <xs:complexType name="environmentType">
        <xs:sequence>
            <xs:element name="dataSource" type="dataSourceType"/>
            <xs:element name="transactionManager" type="transactionManagerType"/>
        </xs:sequence>
        <xs:attribute name="id" type="xs:string" use="required"/>
    </xs:complexType>

    <xs:complexType name="dataSourceType">
        <xs:sequence>
            <xs:element name="property" type="dataSourcePropertyType" maxOccurs="unbounded"/>
        </xs:sequence>
        <xs:attribute name="type" type="dataSourceTypeAttributeType" use="required"/>
    </xs:complexType>
    <xs:simpleType name="dataSourceTypeAttributeType">
        <xs:restriction base="xs:string">
            <!-- 这里定义property name的模式 -->
            <xs:pattern value="h2|unPooled|pooled|mysql" />
        </xs:restriction>
    </xs:simpleType>


    <xs:complexType name="dataSourcePropertyType">
        <xs:attribute name="name" type="dataSourcePropertyNameType" use="required"/>
        <xs:attribute name="value" type="xs:string" use="required"/>
    </xs:complexType>

    <xs:simpleType name="dataSourcePropertyNameType">
        <xs:restriction base="xs:string">
            <!-- 这里定义property name的模式 -->
            <xs:pattern value="driver|url|username|password" />
        </xs:restriction>
    </xs:simpleType>

    <xs:complexType name="transactionManagerType">
        <xs:attribute name="type" type="transactionManagerPropertyType" use="required"/>
    </xs:complexType>

    <xs:simpleType name="transactionManagerPropertyType">
        <xs:restriction base="xs:string">
            <!-- 这里定义property name的模式 -->
            <xs:pattern value="jdbc" />
        </xs:restriction>
    </xs:simpleType>



    <xs:complexType name="mappersType">
        <xs:sequence>
            <xs:element name="mapper" type="mapperType" minOccurs="1"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="mapperType">
        <xs:attribute name="resource" type="xs:string" use="required"/>
    </xs:complexType>


</xs:schema>
